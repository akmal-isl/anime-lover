{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": 2,
    "object-curly-spacing": [2, "always"],
    "spaced-comment": 1,
    "array-callback-return": 2,
    "arrow-spacing": 2,
    "no-unused-vars": "off",
    "no-undef": 2,
    "no-console": 1,
    "no-var": 2,
    "no-eval": 2,
    "no-bitwise": 2,
    "no-alert": 2,
    "no-delete-var": 2,
    "no-else-return": 2,
    "no-labels": 2,
    "no-useless-return": 2,
    "no-nested-ternary": 2,
    "no-useless-escape": 2,
    "no-unneeded-ternary": 2,
    "no-magic-numbers": [2, {
      "ignoreArrayIndexes": true,
      "enforceConst": true,
      "ignore": [0, 1]
    }],
    "no-return-await": 2,
    "no-useless-concat": 2,
    "no-const-assign": 2,
    "no-buffer-constructor": 2,
    "eqeqeq": 2,
    "prefer-promise-reject-errors": 2,
    "prefer-spread": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-template": 2
  }
}
